<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :user, as: :hidden %>    
    <%= f.input :name %>
    <%= f.input :employee_id %>
    <%= f.input :im, hint:'Instant Messaging' %>
    <%= f.association :designation %>
    <%= f.association :profile ,label:'Manager' %>
    <%= f.input :is_admin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
